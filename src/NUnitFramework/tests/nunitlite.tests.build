<?xml version="1.0"?>
<project name="NUnitLiteTests" default="build" basedir=".">
 
  <target name="build">
    <csc target="exe" 
        output="${current.build.dir}/nunitlite.tests.exe"
        debug="${build.debug}" 
        define="${build.defines};NUNITLITE"
        warninglevel="${warn}">
      <sources>
        <include name="../CommonAssemblyInfo.cs"/>
        <include name="NUnitLite.cs" />

        <include name="Api/*.cs" />

        <include name="Assertions/*.cs" />
        <exclude name="Assertions/AssumeThatTests.cs" />
        <exclude name="Assertions/CollectionAssertTest.cs" />
        <exclude name="Assertions/FileAssertTests.cs" />
        <exclude name="Assertions/GreaterEqualFixture.cs" />
        <exclude name="Assertions/GreaterFixture.cs" />
        <exclude name="Assertions/LessEqualFixture.cs" />
        <exclude name="Assertions/LessFixture.cs" />
        <exclude name="Assertions/ListContentsTests.cs" />
        <exclude name="Assertions/NullableTypesTests.cs" />
        <exclude name="Assertions/StringAssertTests.cs" />
        <exclude name="Assertions/TypeAssertTest.cs" />

        <include name="Attributes/ApplyToTestTests.cs" />
        <include name="Attributes/AttributeInheritanceTests.cs" />
        <include name="Attributes/CategoryAttributeTests.cs" />
        <include name="Attributes/DescriptionTests.cs" />
        <include name="Attributes/ExpectedExceptionTests.cs" />
        <include name="Attributes/FixtureSetUpTearDownTests.cs" />
        <include name="Attributes/PropertyAttributeTests.cs" />
        <include name="Attributes/TestCaseAttributeTests.cs" />
        <include name="Attributes/TestCaseSourceTests.cs" />
        <include name="Attributes/TestDummy.cs" />
        <include name="Attributes/TestFixtureAttributeTests.cs" />

        <include name="Constraints/*.cs" />
        <exclude name="Constraints/AfterConstraintTests.cs"/>

        <include name="Internal/PropertyBagTests.cs" />
        <include name="Internal/TestExecutionContextTests.cs" />
        <include name="Internal/TestResultTests.cs" />
        <include name="Internal/TestXmlTests.cs" />
        <include name="Internal/TextMessageWriterTests.cs" />

        <include name="Syntax/CollectionTests.cs" />
        <include name="Syntax/ComparisonTests.cs" />
        <include name="Syntax/EqualityTests.cs" />
        <include name="Syntax/OperatorOverrides.cs" />
        <include name="Syntax/OperatorTests.cs" />
        <include name="Syntax/PathConstraintTests.cs" />
        <include name="Syntax/PropertyTests.cs" />
        <include name="Syntax/SerializableConstraints.cs" />
        <include name="Syntax/SimpleConstraints.cs" />
        <include name="Syntax/StringConstraints.cs" />
        <include name="Syntax/SyntaxTest.cs" />
        <include name="Syntax/ThrowsTests.cs" />
        <include name="Syntax/TypeConstraints.cs" />
        
        <include name="TestUtilities/AlwaysEqualComparer.cs" />
        <include name="TestUtilities/CollectionAdapter.cs" />
        <include name="TestUtilities/TestBuilder.cs" />
        <include name="TestUtilities/TestComparer.cs" />
        <include name="TestUtilities/TestDelegates.cs" />
      </sources>
      <resources prefix="NUnit.Framework.Tests">
        <include name="TestImage1.jpg"/>
        <include name="TestImage2.jpg"/>
        <include name="TestText1.txt"/>
        <include name="TestText2.txt"/>
      </resources>
      <references basedir="${current.build.dir}">
        <include name="nunitlite.dll"/>
        <include name="nunitlite.testdata.dll"/>
        <include name="mscorlib.dll"/>
        <include name="System.dll"/>
        <include name="System.Xml.dll"/>
        <include name="System.Data.dll"/>
        <include name="System.Drawing.dll"/>
      </references>
    </csc>
  </target>

</project>
